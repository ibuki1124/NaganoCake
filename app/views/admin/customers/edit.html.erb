<h1><%= @customer.last_name + @customer.first_name %> さんの会員情報編集</h1>
<%= form_with model:[:admin, @customer], local: true do |f| %>
  <div>
    氏名
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>
  <div>
    フリガナ
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div>
    郵便番号
    <%= f.text_field :postal_code %>
  </div>
  <div>
    住所
    <%= f.text_field :address %>
  </div>
  <div>
    電話番号
    <%= f.text_field :telephone_number %>
  </div>
  <div>
    メールアドレス
    <%= f.text_field :email %>
  </div>
  <div>
    会員ステータス
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, '有効' %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, '退会' %>
  </div>
  <%= f.submit '更新' %>
<% end %>