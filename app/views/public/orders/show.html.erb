<h3 class="title d-inline px-3">注文履歴詳細</h3>
<div class="row">
  <div class="col-lg-6 table-responsive text-nowrap">
    <div class="font-weight-bold">注文情報</div>
    <table class="table table-bordered mt-3">
      <tbody>
        <tr>
          <th scope="row" class="table-secondary">注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th scope="row" class="table-secondary">配送先</th>
          <td>
            <%= "〒" + @order.postal_code %> <br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th scope="row" class="table-secondary">支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th scope="row" class="table-secondary">ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-lg-3 table-responsive text-nowrap">
    <div class="font-weight-bold">請求情報</div>
    <table class="table table-bordered mt-3">
      <tbody>
        <tr>
          <th scope="row" class="table-secondary">商品合計</th>
          <td><%= @total_price %></td>
        </tr>
        <tr>
          <th scope="row" class="table-secondary">配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th scope="row" class="table-secondary">ご請求額</th>
          <td><%= @total_price + @order.shipping_cost %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="col-lg-7 table-responsive text-nowrap">
  <div class="font-weight-bold">注文内容</div>
  <table class="table table-bordered mt-3">
    <thead class="table-secondary">
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.subtotal %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>