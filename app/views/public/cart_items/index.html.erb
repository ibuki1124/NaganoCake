<h1>ショッピングカート</h1>
<div>
  <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, data: { confirm: '本当にカートを空にしますか?' } %>
</div>
<table>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= (cart_item.item.price * 1.1).floor %></td>
      <td><%= cart_item.amount %></td>
      <td><%= ((cart_item.item.price * 1.1) * cart_item.amount).floor %></td>
      <td><%= link_to '削除する', cart_item_path(cart_item), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
    </tr>
  <% end %>
  <tr>
    <td>
      <%= link_to '買い物を続ける', items_path %>
    </td>
    <td>合計</td>
    <td><%= @cart_items.sum { |cart_item| cart_item.item.price * 1.1 * cart_item.amount }.floor %></td>
  </tr>
</table>