<h3 class="title d-inline px-3">新規会員登録</h3>
<%= form_with model: @customer, url: customer_registration_path, class: "mt-5" do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="field row mb-2">
    <span class="col-lg-3 d-lg-flex justify-content-start">名前</span>
    <div class="col-lg-3 d-lg-flex justify-content-end align-items-center">
      <%= f.label :last_name, class:"mb-0 mr-2" %>
      <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
    </div>
    <div class="col-lg-3 d-lg-flex justify-content-end align-items-center">
      <%= f.label :first_name, class:"mb-0 mr-2" %>
      <%= f.text_field :first_name, placeholder: "道子" %>
    </div>
  </div>

  <div class="field row mb-2">
    <span class="col-lg-3 d-lg-flex justify-content-start">フリガナ</span>
    <div class="col-lg-3 d-lg-flex justify-content-end align-items-center">
      <%= f.label :last_name_kana, class:"mb-0 mr-2" %>
      <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
    </div>
    <div class="col-lg-3 d-lg-flex justify-content-end align-items-center">
      <%= f.label :first_name_kana, class:"mb-0 mr-2" %>
      <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
    </div>
  </div>

  <div class="field row mb-2">
    <%= f.label :email, class:"col-lg-3 d-lg-flex justify-content-start mb-0" %>
    <div class="col-lg-3 d-lg-flex justify-content-end align-items-center">
    <%= f.email_field :email, autocomplete: "email", placeholder:"example@example.com" %>
    </div>
  </div>

  <div class="field row mb-2">
    <%= f.label :postal_code, class:"col-lg-3 d-lg-flex justify-content-start mb-0" %>
    <div class="col-lg-3 d-lg-flex justify-content-end align-items-center">
      <%= f.text_field :postal_code, placeholder:"0000000" %>
    </div>
  </div>

  <div class="field row mb-2">
    <%= f.label :address, class:"col-lg-3 d-lg-flex justify-content-start mb-0" %>
    <div class="col-lg-3 d-lg-flex justify-content-end align-items-center">
      <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0" %>
    </div>
  </div>

  <div class="field row mb-2">
    <%= f.label :telephone_number, class:"col-lg-3 d-lg-flex justify-content-start mb-0" %>
    <div class="col-lg-3 d-lg-flex justify-content-end align-items-center">
      <%= f.text_field :telephone_number, placeholder:"00000000000" %>
    </div>
  </div>

  <div class="field row mb-2">
    <div class="col-lg-3 d-lg-flex justify-content-start mb-0">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以内)</em>
      <% end %>
    </div>
    <div class="col-lg-3 d-lg-flex justify-content-end align-items-center">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="field row mb-2">
    <%= f.label :password_confirmation, class:"col-lg-3 d-lg-flex justify-content-start mb-0" %>
    <div class="col-lg-3 d-lg-flex justify-content-end align-items-center">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions row mb-2 offset-lg-3">
    <%= f.submit "新規登録", class:"col-lg-3 d-lg-flex justify-content-end align-items-center btn btn-success ml-5" %>
  </div>
<% end %>

<h3 class="title d-inline px-3">既に登録済みの方</h3>
<div class="mt-3">
  <%= link_to "こちら", new_customer_session_path, class:"ml-4 link-primary" %> からログインしてください。
</div>