<div class="row">
  <div class="col-md-3">
    <table class="table table-bordered mb-0">
      <thead>
        <th>ジャンル検索</th>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= link_to "#" + genre.name, items_path(genre_name: genre.name) %></td>
          </tr>
        <% end %>
    </table>
    <%= paginate @genres, :param_name => 'genre_page' %>
  </div>
  <div class="col-md-9">
    <h2><%= @title %>（全<%= @items.total_count %>件）</h2>
    <div class="row">
      <% @items.each do |item| %>
        <% if item.is_active %>
          <div class="col-md-3 col-6">
            <%= link_to item_path(item) do %>
              <%= image_tag item.image, class:"img-fluid" %>
            <% end %>
            <p class="font-weight-bold"><%= item.name %></p>
            <p><%= number_to_currency(item.with_tax_price, unit: "￥", format: "%u%n") %></p>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= paginate @items, :param_name => 'item_page' %>
  </div>
</div>