<table>
  <thead>
    <th>ジャンル検索</th>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, items_path(genre_name: genre.name) %></td>
      </tr>
    <% end %>
</table>
<%= paginate @genres, :param_name => 'genre_page' %>
<h1><%= @title %>（全<%= @items.total_count %>件）</h1>
<% @items.each do |item| %>
  <% if item.is_active %>
    <div>
      <%= link_to item_path(item) do %>
        <%= image_tag item.get_item_image(200, 100) %>
      <% end %>
      <p><%= item.name %></p>
      <p><%= item.with_tax_price %></p>
    </div>
  <% end %>
<% end %>
<%= paginate @items, :param_name => 'item_page' %>